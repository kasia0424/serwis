{% extends 'base.twig' %}

{% block title %}View User{% endblock %}

{% block content %}
    <h1>
        User's account
    </h1>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Id</th>
            <th>Login</th>
            <th>Role</th>
            <th>Phone number</th>
            <th colspan="3">&nbsp;</th>
        </tr>
        </thead>
        <tbody>

        <tr>
            <td>{{ user.id|e }}</td>
            <td>{{ user.login|e }}</td>
            <td>{{ user.role|e }}</td>
            <td>{{ number }}</td>
            {% if user.id == logged %}
                <td>
                    <a href="{{ url('/user/edit') }}" title="Edit password" class="btn btn-default btn-lg">Edit password</a>
                </td>
                <td>
                    {% if number == null %}
                        <a href="{{ url('/user/number') }}" title="Edit phone number" class="btn btn-default btn-lg">Add phone number</a>
                    {% else %}
                        <a href="{{ url('/user/number') }}" title="Edit phone number" class="btn btn-default btn-lg">Edit phone number</a>
                    {% endif %}
                </td>
            {% endif %}
            <td>
                <a href="{{ url('/user/delete', {'id': user.id}) }}" title="Delete user" onclick="return confirm('Sure you want to delete this user?')" class="btn btn-default btn-lg">Delete </a>
            </td>
        </tr>
        </tbody>
    </table>
    <h4>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ url('/user/panel') }}" title="Users index" class="label label-primary text-uppercase">Back to users list</a>
        {% endif %}
        <a href="{{ url('/user/account') }}" title="Users account" class="label label-primary text-uppercase">Back to account</a>
    </h4>
{% endblock %}