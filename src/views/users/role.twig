{% extends 'base.twig' %}

{% block title %}Change user's role{% endblock %}

{% block content %}
    <h1 class="text-center">
        {{ 'Change users role' |trans }}
    </h1>

    <h3 class="not">
        <strong>{{ 'User' |trans }} </strong> {{ user.login }} <br/>
        <strong> {{ 'Role' |trans }}</strong> {{ user.role }}
    </h3>
    <div class="smallest">
        <form action="" method="post">
            {{ form_widget(form) }}
        </form>
    </div>

    <h4>
        {% if is_granted('ROLE_ADMIN') %}
            <a href="{{ url('/user/panel') }}" title="Users index" class="label label-primary text-uppercase">{{ 'Back to panel' |trans }}</a>
        {% else %}
            <a href="{{ url('/user/account') }}" title="Users account" class="label label-primary text-uppercase">{{ 'Back to account' |trans }}</a>
        {% endif %}
    </h4>
{% endblock %}