{% extends 'base.twig' %}

{% block content %}
    <h1 class="text-center">
        {{ 'Change your password' |trans }}
    </h1>
    <h5 class="not"> {{ 'User' |trans }} {{ user.login }}</h5>
    
    <div>
        <form action="" method="post">
            {{ form_widget(form) }}
            <input type="submit" name="submit" value="Zapisz"/>
        </form>
    </div>
    <h4>
        <a href="{{ url('/user/account') }}" title="User's account" class="label label-primary text-uppercase">{{ 'Back to account' |trans }}</a>
    </h4>
{% endblock %}