<!DOCTYPE html>
<html lang="en">
    <head>
        {% block head %}
            <meta charset="UTF-8" />
            <meta name="viewport" content="width=device-width, initial-scale=1.0">
            <link href="{{ app.request.basepath }}/assets/bootstrap/css/bootstrap.min.css" rel="stylesheet" media="screen">
            <script src="//code.jquery.com/jquery-1.11.2.min.js" type="text/javascript"></script>
            <script src="{{ app.request.basepath }}/assets/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
            <title  class="page-header">{% block title %}{% endblock %}</title>
        {% endblock %}
    </head>
    <body>

        <nav class="navbar navbar-inverse">
            <div class="container">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="{{ url('auth_logout') }}" title="{{ 'Logout'|trans }}" onclick="return confirm('You will be logged out')" class="label label-info pull-right text-uppercase">{{ 'Logout'|trans }}</a>
                    <a href="{{ url('/user/account') }}" title="User's account" class="label label-info pull-right text-uppercase">Account</a>
                    {% if is_granted('ROLE_ADMIN') %}
                        <a href="{{ url('/user/panel') }}" title="Admin panel" class="label label-info pull-right text-uppercase">Admin panel</a>
                    {% endif %}
                {% else %}
                    <a href="{{ url('auth_login') }}" title="{{ 'Login'|trans }}" class="label label-info pull-right text-uppercase">{{ 'Login'|trans }}</a>
                    <a href="{{ url('/user/add') }}" title="Register" class="label label-info pull-right text-uppercase">Register</a>
                {% endif %}
                
                <ul  class="nav nav-pills" role="tablist">
                    <li role="presentation" class="active"><a href="{{ url('/ads/') }}" title="ads index">Ads</a></li>
                    <li role="presentation"  class="active"><a href="{{ url('/categories/') }}" title="categories index">Categories</a></li>
                </ul>
            </div>
        </nav>


        <div id="content">
            {% for flashMessage in app.session.getFlashBag.get('message') %}
                <div class="alert alert-{{ flashMessage.type }}" role="alert">
                    {{ flashMessage.content }}
                </div>
            {% endfor %}
            
            {% block content %}{% endblock %}
        </div>
    </body>
</html>
