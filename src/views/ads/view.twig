{% extends 'base.twig' %}

{% block title %}Ad{% endblock %}

{% block content %}
    
    <h1 class="text-center">
        Ad details
    </h1>
    
    
    {%  if ad|length > 0 %}
        <table class="table table-striped">
            <thead>
                <tr>
                    <th> </th>
                    <th>Title</th>
                    <th>Text</th>
                    <th>Category</th>
                    <th>Date of post</th>
                    <th>Phone number</th>
                    {% if is_granted('ROLE_USER') and loggedUser == ad.user_id %}
                        <th>Actions</th>
                    {% endif %}
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        {% if photo == null %}
                            <a href="{{ url('/photos/upload', {'id': ad.id}) }}" title="Add photo" class="btn btn-default btn-lg active" role="button">Add photo</a>
                        {% else %}
                            <img src="{{ app.request.basepath }}/media/{{ photo }}"  height="200" width="200" alt="obrazek ogÅ‚oszenia" class="img-rounded">
                        {% endif %}
                    </td>
                    <td>{{ ad.title|e }}</td>
                    <td>{{ ad.text|e }}</td>
                    <td>
                        <a href="{{ url('/categories/view', {'id': ad.category_id}) }}" title="Category">{{ ad.category|e }}</a>
                    </td>
                    <td>{{ ad.postDate|e }}</td>
                    <td>{{ number|e }}</td>
                    {% if is_granted('ROLE_USER') and loggedUser == ad.user_id %}
                        <td>
                            <a href="{{ url('/ads/edit', {'id': ad.id}) }}" title="Edit ad" class="btn btn-default btn-lg">Edit</a>
                            <a href="{{ url('/ads/delete', {'id': ad.id, 'user':ad.user_id}) }}" title="Delete ad" onclick="return confirm('Sure you want to delete this ad?')" class="btn btn-default btn-lg">Delete</a>
                        </td>
                    {% endif %}
                    
                </tr>
            </tbody>
        </table>
    {% else %}
        <p>
            Ad not found.
        </p>
    {% endif %}
    <h4>
        {% if is_granted('ROLE_USER') and loggedUser == ad.user_id %}
            {% if photo != null %}
                <a href="{{ url('/photos/', {'id': ad.id}) }}" title="photo upload"  class="label label-primary text-uppercase">Change photo</a> <br/><br/>
            {% endif %}
        {% endif %}
        
        <a href="{{ url('/ads/') }}" title="ads index" class="label label-primary text-uppercase">Back to ads list</a>
    </h4>
{% endblock %}